{
    "name": "advenced-deep-learning-with-pytorch",
    "image": "gcr.io/kaggle-gpu-images/python:latest",
    "runArgs": [
        "--gpus", "all",
        "--shm-size","16gb",
        "--name", "advenced-deep-learning-with-pytorch"
    ],
    "postCreateCommand": "/bin/sh .devcontainer/postCreateCommand.sh",
    "workspaceFolder": "/workspace",
    "mounts": [
        "type=bind,source=${localWorkspaceFolder},target=/workspace"
    ],
    "customizations": {
        "vscode": {
            "settings": {
				"python.defaultInterpreterPath": "/opt/conda/bin/python",
                "cSpell.words": [
                    "Addmm",
                    "ILSVRC",
                    "Relu",
                    "torchvision",
                    "torchviz"
                ]
			},
            "extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter",
				"yzhang.markdown-all-in-one",
				"eamodio.gitlens",
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"bierner.markdown-preview-github-styles",
				"ms-azuretools.vscode-docker"
			]
        }
    }
}
